    }

    .btn-work { background-image: url('btn_1.png'); }
    .btn-invest { background-image: url('btn_2.png'); }
    .btn-gamble { background-image: url('btn_3.png'); }
    .btn-tax { background-image: url('btn_4.png'); }

    button:active {
      transform: scale(0.97);
